<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abcbr.osnumericalkeyboard.fragments.NumericKeyboard">

    <Button
        android:id="@+id/numpad2"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:text="2"
        android:layout_marginLeft="237dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="237dp"
        android:textSize="24sp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPin" />

    <Button
        android:id="@+id/numpad1"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:text="1"
        app:layout_constraintRight_toLeftOf="@+id/numpad2"
        app:layout_constraintTop_toTopOf="@+id/numpad2"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad3"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/numpad2"
        app:layout_constraintTop_toTopOf="@+id/numpad2"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad4"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:text="4"
        app:layout_constraintRight_toLeftOf="@+id/numpad5"
        app:layout_constraintTop_toTopOf="@+id/numpad5"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad5"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:text="5"
        app:layout_constraintTop_toBottomOf="@+id/numpad2"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/numpad1"
        android:layout_marginLeft="-12dp"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad6"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@+id/numpad5"
        app:layout_constraintTop_toTopOf="@+id/numpad5"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad8"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:text="8"
        app:layout_constraintTop_toBottomOf="@+id/numpad5"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/numpad5"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad7"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:text="7"
        app:layout_constraintRight_toLeftOf="@+id/numpad8"
        app:layout_constraintTop_toTopOf="@+id/numpad8"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad9"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/numpad8"
        app:layout_constraintTop_toTopOf="@+id/numpad8"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad0"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/numpad8"
        android:layout_marginTop="-13dp"
        app:layout_constraintLeft_toRightOf="@+id/numpad7"
        android:layout_marginLeft="0dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textViewPin"
        android:layout_width="269dp"
        android:layout_height="39dp"
        android:paddingLeft="10dp"
        android:text="PIN:"
        android:gravity="center_vertical"
        android:background="@drawable/txtv_border"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="114dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnChangePin"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:text="Cambiar pin"
        app:layout_constraintLeft_toRightOf="@+id/textViewPin"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/textViewPin"
        android:layout_marginTop="0dp" />

    <EditText
        android:id="@+id/edtxtActualPin"
        android:layout_width="403dp"
        android:layout_height="43dp"
        android:hint="PIN Actual"
        android:layout_marginTop="685dp"
        app:layout_constraintTop_toBottomOf="@+id/btnChangePin"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewPin" />


</android.support.constraint.ConstraintLayout>