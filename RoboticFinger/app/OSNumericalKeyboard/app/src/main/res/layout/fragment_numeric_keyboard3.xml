<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abcbr.osnumericalkeyboard.fragments.NumericKeyboard">

    <Button
        android:id="@+id/numpad2"
        android:layout_width="30mm"
        android:layout_height="30mm"
        android:text="2"
        android:layout_marginLeft="205dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="205dp"
        android:textSize="24sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPin" />

    <Button
        android:id="@+id/numpad1"
        android:layout_width="30mm"
        android:layout_height="30mm"
        android:text="1"
        app:layout_constraintRight_toLeftOf="@+id/numpad2"
        app:layout_constraintTop_toTopOf="@+id/numpad2"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad3"
        android:layout_width="30mm"
        android:layout_height="30mm"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/numpad2"
        app:layout_constraintTop_toTopOf="@+id/numpad2"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad4"
        android:layout_width="30mm"
        android:layout_height="30mm"
        android:text="4"
        app:layout_constraintRight_toLeftOf="@+id/numpad5"
        app:layout_constraintTop_toTopOf="@+id/numpad5"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad5"
        android:layout_width="30mm"
        android:layout_height="30mm"
        android:text="5"
        app:layout_constraintTop_toBottomOf="@+id/numpad2"
        android:layout_marginTop="-191dp"
        app:layout_constraintLeft_toRightOf="@+id/numpad1"
        android:layout_marginLeft="-394dp"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad6"
        android:layout_width="30mm"
        android:layout_height="30mm"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@+id/numpad5"
        app:layout_constraintTop_toTopOf="@+id/numpad5"
        android:textSize="24sp"
        android:layout_marginLeft="-188dp"
        android:layout_marginTop="-246dp" />

    <Button
        android:id="@+id/numpad8"
        android:layout_width="30mm"
        android:layout_height="30mm"
        android:text="8"
        app:layout_constraintTop_toBottomOf="@+id/numpad5"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/numpad5"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad7"
        android:layout_width="30mm"
        android:layout_height="30mm"
        android:text="7"
        app:layout_constraintRight_toLeftOf="@+id/numpad8"
        app:layout_constraintTop_toTopOf="@+id/numpad8"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/numpad9"
        android:layout_width="30mm"
        android:layout_height="30mm"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/numpad8"
        app:layout_constraintTop_toTopOf="@+id/numpad8"
        android:textSize="24sp"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/numpad0"
        android:layout_width="30mm"
        android:layout_height="30mm"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/numpad8"
        android:layout_marginTop="-13dp"
        app:layout_constraintLeft_toRightOf="@+id/numpad7"
        android:layout_marginLeft="0dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textViewPin"
        android:layout_width="267dp"
        android:layout_height="31dp"
        android:paddingLeft="10dp"
        android:text="PIN:"
        android:gravity="center_vertical"
        android:background="@drawable/txtv_border"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="78dp" />

    <Button
        android:id="@+id/btnChangePin"
        android:layout_width="174dp"
        android:layout_height="43dp"
        android:text="Cambiar pin"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/textViewPin"
        android:layout_marginLeft="27dp"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/edtxtActualPin"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:hint="PIN Actual"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="67dp"
        app:layout_constraintTop_toBottomOf="@+id/numpad7" />


</android.support.constraint.ConstraintLayout>